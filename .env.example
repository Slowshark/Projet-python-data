# Configuration d'Environnement - Copier vers .env et remplir

# Email Notifications
ALERT_EMAIL=votre_email@gmail.com
ALERT_PASSWORD=votre_app_password_gmail

# Paramètres API (optionnel, délais par défaut: 2 secondes)
RATE_LIMIT_DELAY=2.0

# Paramètres des Alertes
ALERT_CRITICAL_CVSS=9.0
ALERT_HIGH_CVSS=7.0
ALERT_HIGH_EPSS=0.75

# Monitored Vendors (comma-separated)
MONITORED_VENDORS=Microsoft,Apache,Ivanti,Linux,Oracle

# Limiter les CVE pour les tests (laisser vide pour tous)
MAX_CVES_TEST=

# Chemins (à ne pas modifier normalement)
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed
OUTPUT_ALERTS_DIR=output/alerts
NOTEBOOKS_DIR=notebooks
